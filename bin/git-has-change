#!/bin/sh

_has_git_status() {
  if test -z "$1"; then
    test -n "$(git status --porcelain)"
    return $?
  fi

  if test "$1" = 'staged'; then
    $(git status --porcelain | grep -Pq '^[MAD]')
    return $?
  fi

  if test "$1" = 'unstaged'; then
    $(git status --porcelain | grep -Pq '^ +[?MAD]')
    return $?
  fi

}

_has_git_status "$@"
