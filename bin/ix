#!/bin/sh

set -e

_has_url_prefix() {
  ggrep -qP 'ix\.io/'
}

_pastebin() {
  (
    if echo "$1" | _has_url_prefix; then
      exec curl -s "$1"
      return 0
    elif test -n "$1"; then
      exec curl -s "ix.io/$1"
      return 0
    fi

    _input="$(cat)"
    url="$(echo "$_input" | curl -s -F 'f:1=<-' http://ix.io)"

    if type xclip > /dev/null ; then
      echo "$url" | xclip -sel c
    fi
    echo "$_input" > /dev/stdout
    echo "$url" > /dev/stderr
    
  )
}

_pastebin "$@"
