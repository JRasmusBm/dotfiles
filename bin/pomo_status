#!/bin/bash

pomo_status() {
  raw_status=`/usr/bin/i3-gnome-pomodoro status`
  status_text=${raw_status%% *}
  time=${raw_status#* }

  if echo "$raw_status" | grep -q "PAUSED" ; then
    printf "⭕ Paused"
    return
  fi

  if test "$status_text" = "Break"; then
    printf "%s%s" "⛱ " "$time"
    return
  fi

  if (test "$status_text" = "Pomodoro") ; then
    printf "%s %s" "🍅" "$time"
    return
  fi

  printf "⭕ No Pomo"
}

pomo_status
