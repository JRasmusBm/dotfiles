#!/bin/bash

pomo_status() {
  raw_status=`/usr/bin/i3-gnome-pomodoro status`
  status_text=${raw_status%% *}
  time=${raw_status#* }

  if test "$status_text" = "Break"; then
    printf "%s%s" "⛱ " "$time"
  elif test "$status_text" = "Pomodoro"; then
    printf "%s %s" "🍅" "$time"
  else
    printf "⭕ No Pomo"
  fi
}

pomo_status
