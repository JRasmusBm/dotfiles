#!/bin/sh

set -e

if test "$(uname)" = 'Darwin' ; then
  grep_cmd='ggrep'
else
  grep_cmd='grep'
fi


_git_close_issue() {
  if ! (g is-my-repo || confirm "This is not your repository, do you want to continue?"); then
    return 1
  fi

  if test $# -eq 0; then
    echo "Usage: git ci [.|:] <number>" >&2
    return 1
  elif test "$1" = ':'; then
    number=$(gh issue list | fzf --reverse | "$grep_cmd" -o -E "^([0-9])+")
  elif test "$1" = '.'; then
    number="$(git branch --show-current | awk -F '-' '{ print $1 }')"
  else
    number=$1
  fi

  gh issue close "$number"
}

_git_close_issue "$@"
