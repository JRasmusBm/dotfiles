#!/bin/sh

set -e

_git_cherry_pick_into_branch() {
  (
    if test -z "$1"; then
      echo 'Target branch required' >/dev/stderr
      return
    fi

    _commit="$(git log --format='%H' -1)"
    git s "$1"
    git fetch
    git rof
    g cp "$_commit"
    g push
  )
}

_git_cherry_pick_into_branch "$@"
