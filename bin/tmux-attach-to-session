#!/bin/sh

set -e


if test "$(uname)" = 'Darwin' ; then
  grep_cmd='ggrep'
else
  grep_cmd='grep'
fi


_attach_to_session() {
  session_name="$(echo "$1" | "$grep_cmd" -oP '(\S+(?=:)|^\S+$)')"

  tmux switch-client -t "$session_name" 2>/dev/null \
    || tmux attach -t "$session_name"
}

_attach_to_session "$@"
