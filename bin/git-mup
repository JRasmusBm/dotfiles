#!/bin/sh

set -e

git_update_main() {
  (
    local_main=$(g local-main-branch)
    remote_main=$(g remote-main-branch)
    needs_stash=$(git is-clean || echo "yes")

    if test -n "$needs_stash"; then
      g stash push -u
    fi

    g f
    g s "$local_main"
    g ff "$remote_main"
    g remove-merged || true
    g s - "$@" 2>/dev/null || true

    if test -n "$needs_stash"; then
      g stash pop
      echo "Applied autostash."
    fi

    g rsa
    g suu
  )
}

git_update_main "$@"
