#!/bin/sh

set -e

if test "$(uname)" = 'Darwin' ; then
  grep_cmd='ggrep'
else
  grep_cmd='grep'
fi

if test $# -eq 0; then
  echo "Usage: git vi [.|:] <number>" >&2
  exit 1
elif test "$1" = ':'; then
  number=$(gh issue list | fzf --reverse | "$grep_cmd" -o -E "^([0-9])+")
elif test "$1" = '.'; then
  number="$(g branch --show-current | awk -F '-' '{ print $1 }')"
else
  number=$1
fi

gh issue view "$number"
