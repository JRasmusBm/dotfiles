#!/bin/sh

set -e

git_push_force() {
  (

    set -x
    needs_stash=$(git is-clean || echo "yes")

    if test -n "$needs_stash"; then
      g stash push -u
    fi

    g push --force-with-lease "$@"

    if test -n "$needs_stash"; then
      g stash pop
      echo "Applied autostash."
    fi
  )
}

git_push_force "$@"
tmux refresh-client -S 2>/dev/null || true
